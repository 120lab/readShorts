<UserControl x:Class="readShorts.ManageBackoffice.Page1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:pages="clr-namespace:readShorts.ManageBackoffice"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="475"
             d:Height="400" d:Width="475">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="Beige"></SolidColorBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!--<pages:SwitcherMenu Grid.Row="0"></pages:SwitcherMenu>-->
        <Label Content="Choose user for short update" Grid.Row="1" Grid.Column="1"/>
        <DataGrid Name="UserGrid" SelectionMode="Single" Grid.Row="2" Grid.Column="1" SelectionChanged="UserGrid_SelectionChanged"></DataGrid>
    </Grid>
</UserControl>
