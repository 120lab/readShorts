<Window x:Class="readShorts.ManageBackoffice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:readShorts.ManageBackoffice"
        mc:Ignorable="d"
        Title="MainWindow" 
        d:DesignHeight="400" d:DesignWidth="475"
        d:Height="400" d:Width="475" ResizeMode="NoResize">
    <Grid Name="GridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <local:PageContent x:Name="pageContent" Grid.Row="0"></local:PageContent>        
        <local:SwitcherMenu Grid.Row="1"></local:SwitcherMenu>
    </Grid>
</Window>
